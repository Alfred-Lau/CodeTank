extends layout

block content
	form(method="POST", action="/user/signin")
		label(for="signinName") 用户名
		input#signinName(name="user[name]", type="text")
		label(for="signinPassword") 密码
		input#signinPassword(name="user[password]", type="text")
		button(type="button", data-dismiss="modal") 关闭
		button(type="submit") 提交